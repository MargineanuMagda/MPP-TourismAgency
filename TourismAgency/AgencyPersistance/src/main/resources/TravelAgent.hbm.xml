<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="domain.TravelAgent" table="users"  >
        <id name="id">
            <column name="idUser" sql-type="bigint">
            </column>
        </id>
        <property name="username">
            <column name="username" sql-type="varchar(50)" length="30" not-null="true"/>
        </property>
        <property name="passwd">
            <column name="parola" sql-type="varchar(50)" length="30" not-null="true"/>
        </property>
    </class>

</hibernate-mapping>